@using E_Commerce2.ViewModels.OderVM_s;

@model OrderVM
@{
    var SubTotal = TempData["SubTotal"] as string;
    if (SubTotal == null) SubTotal = Convert.ToString(0);
}


<div class="mx-auto rounded border p-4" style="width: 420px">
    <h2 class="text-center mb-3">Order Details</h2>
    <hr />

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success" role="alert">@ViewBag.SuccessMessage</div>
        <a class="btn btn-outline-primary" asp-controller="ClientOrders" asp-action="Index">Back</a>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-5">Delivery Address</div>
            <div class="col-7">@Model.DeliveryAddress</div>
        </div>
        <div class="row mb-3">
            <div class="col-5">Payment Method</div>
            <div class="col-7">@Model.PaymentMethod</div>
        </div>
        <div class="row mb-3">
            <div class="col-5">Total Amount</div>
            <div class="col-7">@(SubTotal.ToString()) $</div>
        </div>
       


        <form method="post">
            <div class="row">
                <div class="col-sm-6 d-grid">
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
                <div class="col-sm-6 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Cart" asp-action="GetCartsforUser">Back</a>
                </div>
            </div>
        </form>
    }

</div>