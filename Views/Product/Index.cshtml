@using Microsoft.AspNetCore.Html;
@model List<Product>
@{
    string search = ViewBag.search;
}

<h2 class="text-center mb-5">List of Products</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Product" asp-action="AddNewProduct">New Product</a>
    </div>
</div>

<div class="col">
    <form class="d-flex" role="search" method="Index">
        <input class="form-control me-2" type="search" name="search" value="@search" placeholder="Search by Name or Brand" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>


<br><br>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Brand</th>
            <th>Description</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
               <td>@product.Id</td>
               <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category</td>
                <td>@product.Brand</td>
                <td>@product.Description</td>
                <td><img src = "Images/products/@product.ImageFileName" width="100"></img></td>

                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Product" asp-action="EditProduct"
                       asp-route-id="@product.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Product" asp-action="DeleteProduct"
                       asp-route-id="@product.Id" onclick="return confirm('Are you sure?')">Delete</a>
                <td/>

            </tr>
        }
    </tbody>
</table>

