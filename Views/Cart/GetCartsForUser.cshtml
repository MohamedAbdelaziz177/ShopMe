@using E_Commerce2.ViewModels.CartVM_s;
@model List<CartVM>


@{
    decimal Subtotal = 0, Total = 0, shipFee = 12.5M;
    List<CartVM> cartItems = new List<CartVM>();
}
<div class="row border rounded-3">
    <div class="col-md-8 p-3">
        <h4>Shopping Cart</h4>
        <hr />


        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mt-4" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <table class="table align-middle">
            <tbody>
                @foreach (var item in Model)
                {
                    @**@  <partial name="CartItemPartial" model="@item"></partial>
                    Subtotal += (item.Quantity * item.Price);
               
                    cartItems.Add(item);
                }
            </tbody>
        </table>

        @if (Model != null)
        {
            <form asp-action="CreateOrder" asp-controller="Order" method="post" class="p-4 bg-light rounded shadow-sm">
              

                @foreach (var item in Model)
                {
                    <input type="hidden" name="cartItems[]" value="@Json.Serialize(item)" />
                }

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-cart-check"></i> Proceed to Checkout
                    </button>
                </div>
            </form>
        }

    </div>

